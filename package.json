{
  "name": "npb",
  "version": "1.0.0",
  "description": "Blog, portfolio, and ramblings",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:css & npm run start:html & live-server --no-browser --port=3000 build",
    "build": "npm run build:html && npm run build:images && npm run build:css",
    "build:html": "cp src/index.html build/index.html",
    "start:html": "chokidar 'src/**/*.html' -c 'npm run build:html'",
    "build:images": "cp -r src/static/images build/static/images",
    "build:css": "postcss -o build/static/css/app.css -u postcss-import -u autoprefixer -u postcss-simple-vars src/static/css/app.css",
    "start:css": "npm run build:css -- -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "tachyons": "^4.5.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "autoprefixer-core": "^5.2.1",
    "chokidar-cli": "^1.2.0",
    "live-server": "^1.1.0",
    "postcss": "^5.2.4",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^8.1.2",
    "postcss-simple-vars": "^3.0.0",
    "shipit-cli": "^1.3.0",
    "shipit-deploy": "^2.0.0"
  }
}
