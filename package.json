{
  "name": "npb",
  "version": "1.0.0",
  "description": "Blog, portfolio, and ramblings",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./components ./pages",
    "prebuild": "rm -rf dist",
    "build": "NODE_ENV=production run-s build:*",
    "dev": "npm-run-all --parallel watch:*",
    "build:css": "postcss src/site/_includes/css/tailwind.css -o src/site/css/styles.css",
    "build:html": "eleventy",
    "watch:html": "eleventy --serve --port=8181",
    "watch:css": "postcss src/site/_includes/css/tailwind.css -o src/site/css/styles.css --watch",
    "xdev": "next",
    "start": "next start",
    "xbuild": "next build"
  },
  "browser": {
    "fs": false,
    "marked": false
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@mdx-js/loader": "^1.5.1",
    "@next/mdx": "^9.1.4",
    "date-fns": "^1.29.0",
    "next": "9.1.4",
    "postcss-cli": "^7.1.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "@mapbox/rehype-prism": "^0.3.1",
    "@mdx-js/mdx": "^1.5.1",
    "@zeit/next-css": "^1.0.1",
    "autoprefixer": "^9.7.3",
    "cssnano": "^4.1.10",
    "eslint": "^6.7.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "html-minifier": "^4.0.0",
    "luxon": "^1.22.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.13.7",
    "tailwindcss": "^1.2.0"
  }
}
