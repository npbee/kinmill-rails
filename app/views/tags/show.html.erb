<p id="notice"><%= notice %></p>

<p>
<strong>Tag:</strong>
  <%= @tag.name %>
</p>

<h2>Post References</h2>
<% @tag.post_references.each do |post_reference| %>
  <%= link_to post_reference.title, post_path(post_reference) %>
<% end %>

<h2>Project References</h2>
<% @tag.project_references.each do |project_reference| %>
  <%= link_to project_reference.name, project_path(project_reference) %>
<% end %>


<% if logged_in? %>
  <%= link_to 'Edit', edit_tag_path(@tag) %>
<% end %>
