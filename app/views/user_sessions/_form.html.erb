    </li>
    <li>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
    </li>
    <li>
    <div class="checkbox">
      <%= check_box_tag :remember %>
      <%= label :remember, "Remember me" %>
    </div>
    </li>
    <li>
    <%= button_tag "Login", :class => "button", "data-icon" => "î˜‰" %>
    </li>
  </ul>
<% end %>
