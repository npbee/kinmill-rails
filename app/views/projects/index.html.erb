<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Url</th>
      <th>Date completed</th>
      <th>Body</th>
      <th>Logo</th>
      <th>Thumbnail</th>
      <th>Small screen</th>
      <th>Medium screen</th>
      <th>Large screen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.role %></td>
        <td><%= project.url %></td>
        <td><%= project.date_completed %></td>
        <td><%= project.body %></td>
        <td><%= project.logo %></td>
        <td><%= project.thumbnail %></td>
        <td><%= project.small_screen %></td>
        <td><%= project.medium_screen %></td>
        <td><%= project.large_screen %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
